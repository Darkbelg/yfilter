<main>
{% for thumbnail in html %}
    <div >
    <a class="search-result" href="https://www.youtube.com/watch?v={{ thumbnail['id']['videoId'] }}" target="_blank">

    <img src="{{ thumbnail['snippet']['thumbnails']['medium']['url'] }}" />
    <h2>{{ thumbnail['snippet']['title'] }}</h2>
        <p>{{ thumbnail['snippet']['description'] }}</p>
    </a>
    </div>
{% endfor %}
