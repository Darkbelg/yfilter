<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>YFilter</title>
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
<header>
    <h1>Youtube Advanced Search</h1>
    <form action="/">
        <fieldset>
            <legend>Start Searching</legend>
                <label for="search">Search:</label>
                <input type="text" name="search" id="search" required value="{% if search %} {{ search }} {% endif %}">
                <input type="submit" value="find">
        </fieldset>
        <fieldset>
            <legend>Between</legend>
                <input type="radio" name="time" id="short" value="short"
                    {% if time == "short" %} checked {% endif %}><label for="short">0 And 4:00</label>
                <input type="radio" name="time" id="medium" value="medium"
                    {% if time == "medium" %} checked {% endif %}><label for="medium">4:00 And 20:00</label>
                <input type="radio" name="time" id="long" value="long"
                    {% if time == "long" %} checked {% endif %}><label for="long">20:00 And Up</label>
                <input type="radio" name="time" id="any" value="any"
                    {% if time == "any" or not time %} checked {% endif %}><label for="any">Any</label>
        </fieldset>
