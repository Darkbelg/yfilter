                <input type="radio" name="type" id="playlist" value="playlist"
                    {%  if type == "playlist" %} "checked" {% endif %}><label for="playlist">Playlist</label>
                <input type="radio" name="type" id="video" value="video"
                    {%  if type == "video"|| not type %} "checked" {% endif %}><label for="video">Video</label>
        </fieldset>

